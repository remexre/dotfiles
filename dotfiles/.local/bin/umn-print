#!/bin/bash

set -eu

usage() {
    echo "Usage: umn-print acm  FILE" >&2
    echo "       umn-print kona FILE" >&2
	exit 1
}

if [[ "${#}" -ne 2 ]]; then
	usage
fi

case "${1}" in
	acm)
		echo TODO PUT IN ACM PRINTER
		exit 2
		REMOTE="clubby.acm.umn.edu"
		;;
	kona)
		PRINTER="p6-204"
		REMOTE="cs-kona.cs.umn.edu"
		;;
	*)
		usage
		;;
esac

if [[ "${2:--}" = "-" ]]; then
	FILE="$(mktemp)"
	TEMP=1

	cat - > "${FILE}"
else
	FILE="${2}"
	TEMP=0
fi

REMOTE_FILE="$(ssh "${REMOTE}" mktemp --suffix .pdf)"
scp "${FILE}" "${REMOTE}:${REMOTE_FILE}"
ssh "${REMOTE}" lp -d "${PRINTER}" "${REMOTE_FILE}"
ssh "${REMOTE}" rm "${REMOTE_FILE}"

if [[ "${TEMP}" -ne 0 ]]; then
	rm "${FILE}"
fi
